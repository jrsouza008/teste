biiiiiiiiiiiiiiiiiiirrrrrrrrr vamos fazer um progrma do monstro em C++


#include <stdio.h>
#include <locale.h>
#include <conio.h>
#include <iostream>

using namespace std;

class joao{
	public:
	    char monstro[100];
	    void monstro(){
		
		cout<<"\t=========BEM VINDO A JAULA DO MONSTRO============" 
		cout<<"\n\nInforme a frase do monstro: ";
		gets(monstro);

		cout<<"\n============x================";
		cout<<"\nO monstro falou: "<<monstro;

	    }

};

int main(){
	setlocale(LC_ALL, "portuguese");

	joao obj;

	obj.monstro();

	getch();
	return 0;

}





